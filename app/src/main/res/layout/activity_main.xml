<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:background="#cbb8d2"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buLog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20sp"
        android:background="@drawable/rounded_buttons"
        android:text="Powrót do ekranu logowania"
        android:textAllCaps="false" />

    <LinearLayout
        android:padding="2pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:ems="8"
            android:hint="Email przeciwnika:"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_buttons"
            android:onClick="buRequestEvent"
            android:text="Zaproś"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2sp"
            android:layout_weight="1"
            android:background="@drawable/rounded_buttons"
            android:onClick="buAcceptEvent"
            android:text="Akceptuj"
            android:textAllCaps="false" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/PVP"
                android:layout_width="35dp"
                android:layout_height="60dp"
                android:alpha="0.9"
                android:backgroundTint="#E91E63"
                android:onClick="PlayerChoose"
                android:text="Gracz vs Gracz"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/PVC"
                android:layout_width="35dp"
                android:layout_height="60dp"
                android:layout_margin="7sp"
                android:alpha="0.9"
                android:onClick="PlayerChoose"
                android:text="Gracz vs Komputer"
                android:textAllCaps="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button1"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:onClick="buttonClick"
                android:textSize="40sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button2"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:onClick="buttonClick"
                android:textSize="40sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button3"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:onClick="buttonClick"
                android:textSize="40sp"
                tools:ignore="ButtonStyle" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button4"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:onClick="buttonClick"
                android:textSize="40sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button5"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:onClick="buttonClick"
                android:textSize="40sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button6"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:onClick="buttonClick"
                android:textSize="40sp"
                tools:ignore="ButtonStyle" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button7"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:onClick="buttonClick"
                android:textSize="40sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button8"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:onClick="buttonClick"
                android:textSize="40sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/button9"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_margin="2dp"
                android:onClick="buttonClick"
                android:textSize="40sp"
                tools:ignore="ButtonStyle" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="2pt">

            <Button
                android:id="@+id/bRestart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_buttons"
                android:onClick="restartGame"
                android:text="Wyczyść"
                android:textAlignment="center"
                android:textSize="18sp"
                tools:ignore="ButtonStyle" />
        </TableRow>

    </TableLayout>




</LinearLayout>